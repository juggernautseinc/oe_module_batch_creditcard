{% extends "layout.twig" %}

{% block body %}
<h3 class="mt-5 mb-5">{{ pageTitle|xlt }}</h3>
    <div class="mt-15">
        <span><button><a href="{{ href }}">{{ "View incoming faxes"|xlt }}</a></button></span>
    </div>
    <div class="mt-15 mb-15">
        <table class="table table-striped table-bordered">
            <th>{{ "Date"|xlt }}</th>
            <th>{{ "Sender"|xlt }}</th>
            <th>{{ "Number"|xlt }}</th>
            <th>{{ "Direction"|xlt }}</th>
            <th>{{ "Page Count"|xlt }}</th>
            <th>{{ "Status"|xlt }}</th>
            <th>{{ "Details"|xlt }}</th>

            {% for entries in data %}
                {% for key, value in entries %}
                    {% if value.faxNumber  %}
                        <tr>
                            <td>{{ value.createdAt|e }}</td>
                            <td></td>
                            <td>{{ value.faxNumber|e }}</td>
                            <td>{{ value.direction|xlt }}</td>
                            <td>{{ value.pagesCount|e }}</td>
                            <td>{{ value.processingStatusName|xlt }}</td>
                            <td>{{ value.resultInfo|xlt }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        </table>
    </div>
{% endblock %}
